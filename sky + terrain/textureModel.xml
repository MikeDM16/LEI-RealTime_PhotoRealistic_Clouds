<?xml version="1.0" ?>
<project name="Texture Model" >
	
	<assets>
		<constants>
			<constant name="GridSize" value = "12" />
		</constants>

		<attributes>
			<attribute name="GridSize" type="PASS" data="INT" value="GridSize" />
			<attribute name="GridLevels" type="PASS" data="INT" value=128 />
			<attribute name="GridCurrentLevel" type="PASS" data="INT" value=0 />

			<!-- terrain parameters -->
			<attribute type="COLOR" name="scale" data="FLOAT" value=50/>
		</attributes>

		<viewports>
			<viewport name="MainViewport" >
				<ORIGIN x=0.0 y=0.0 />
				<SIZE width=1 height=1 />
				<CLEAR_COLOR r="0.0" g="0.749" b="1.0" />
			</viewport>
			<viewport name="Grid">
				<CLEAR_COLOR r="0.0" g="1.0" b="0.0" />
				<SIZE x="GridSize" y="GridSize" />
			</viewport>
		</viewports>

		<scenes>
			<scene name="terrain" type="Scene">	
				<geometry name = "terra" type = "GRID" material="terrain" 
							DIVISIONS=1024 LENGTH=1024 >
				</geometry>							
			</scene>
			<scene name="Dummy" >
				<buffers name="positions" primitive="POINTS" material="showRays">
					<position name="dummy" fromLibrary="Voxels" />				
				</buffers>
			</scene>
		</scenes>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<POSITION x=568 y=163 z=734 />
				<VIEW x=-0.6 y=0.08 z=-0.786 />
				<NEAR value=0.0001/>
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=-2 y=-2 z=-2 />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="textureModel.mlib" />
			<materialLib filename="voxels.mlib" />
		</materialLibs>
	</assets>
	
	<pipelines>
		<pipeline name="clouds" >

			<pass class="quad" name="pass1" >
				<viewport name = "MainViewport" />
				<materialMaps>
					<map fromMaterial="*" toLibrary="Texture" toMaterial="sky" />
				</materialMaps>
			</pass>

			<pass class="default" name="pass2" >
				<COLOR_CLEAR value="false" />
				<scenes>
					<scene name="terrain" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toLibrary="Texture" toMaterial="terrain" />
				</materialMaps>
			</pass>

			<!--<pass class="default" name="pass3">				
				<COLOR_CLEAR value="false" />
				<scenes>
					<scene name="Dummy" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<materialMaps>			
					<map fromMaterial="*" toLibrary="Voxels" toMaterial="showVoxels" />
				</materialMaps>				
			</pass>-->
			
		</pipeline>
	</pipelines>

	<interface>
		<window label="Main Window">
			<var label="scale" type="COLOR" context="Texture::terrain" 
					component="scale" def="min=0 max=1000 step=15" />
		</window>
	</interface>

</project>